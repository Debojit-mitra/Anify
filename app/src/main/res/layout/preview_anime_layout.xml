<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_shape">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/fact_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/mode_inverse_extra"
            android:textStyle="bold"
            android:padding="8dp"
            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/widget_refresh_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="bottom|end">

        <ImageView
            android:id="@+id/widget_refresh_button"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_reload"
            android:background="@android:color/transparent"
            android:contentDescription="@string/update_fact"
            android:tint="@color/mode_inverse_extra"
            android:padding="2dp"
            android:hapticFeedbackEnabled="true"
            tools:ignore="UseAppTint" />

        <ProgressBar
            android:id="@+id/widget_refresh_progress"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="center"
            android:visibility="gone" />

    </FrameLayout>

    <ImageView
        android:id="@+id/background_img"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:src="@drawable/anime_background"
        android:background="@android:color/transparent"
        android:contentDescription="@string/background_image"
        android:hapticFeedbackEnabled="true"
        android:elevation="-1dp"
        android:alpha="0.7"
        android:layout_gravity="center"
        tools:ignore="UseAppTint" />


</FrameLayout>